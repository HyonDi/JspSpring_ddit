<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Community-Mapper">

	<sql id="search">
		<if test="searchType == 't'.toString()">
			and title like '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 'w'.toString()">
			and writer like '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 'c'.toString()">
			and content like '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 'tc'.toString()">
			and (
			title like '%'||#{keyword}||'%'
			or
			content like '%'||#{keyword}||'%'						
			)			
		</if>
		<if test="searchType == 'cw'.toString()">
			and (
			writer like '%'||#{keyword}||'%'
			or
			content like '%'||#{keyword}||'%'						
			)			
		</if>
		<if test="searchType == 'tcw'.toString()">
			and (
			community_title like '%'||#{keyword}||'%'
			or
			member_code like '%'||#{keyword}||'%'
			or
			community_contents like '%'||#{keyword}||'%'						
			)			
		</if>
	</sql>
	
	<select id="selectSearchCommunityList" resultType="community">
		<![CDATA[
			select
			*
			from
			community
			where community_code is not null  	
		]]>		  	
			<include refid="search" />
			order by community_reg_date desc
		
	</select>
	
	<select id="selectSearchCommunityListCount" resultType="int">
		<![CDATA[
			select
			count(*)
			from
			community
			where community_code is not null  	
		]]>		  	
			<include refid="search" />
		
	</select>

	<select id="selectCommunityMain" resultType="community">
		<![CDATA[
			select 
			* 
			from 
			community 
			where rownum <= 6 
			order by community_reg_date desc
		]]>
	</select>
	
	<select id="selectCommunityByCno" parameterType="String" resultType="community">
		select 
		* 
		from 
		community
		where community_code = #{community_code}
	</select>
	
	<update id="mobileCommunityRegist" parameterType="community">
		insert into community (community_code, member_code, community_title, community_contents, community_reg_date, board_sort_code)
		values('com' || to_char(sysdate,'yyyymmdd') || community_seq.nextval, #{member_code}, #{community_title}, #{community_contents}, sysdate, 'communityboard')
	</update>
	
	<update id="increaseViewCnt" parameterType="String">
		update community 
			set 
		community_view_cnt = community_view_cnt + 1 
			where 
		community_code = #{community_code}	
	</update>
	
	<delete id="mobileCommunityDelete" parameterType="String">
		delete from
		community
		where community_code = #{community_code}
	</delete>
	
	<update id="mobilecommunityModify" parameterType="community">
		update community
		set community_title = #{community_title},
			community_contents = #{community_contents},
			community_update_date = sysdate
		where community_code = #{community_code}
	</update>
	
</mapper>